// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(cuid()) @map("_id")
  name     String
  devices  Device[]
  keycards Keycard[]

  Authentication Authentication[]
  @@map("users")
}

model Device {
  id             String          @id @default(cuid()) @map("_id")
  name           String
  loggedInAt     DateTime        @default(now())
  rsaKey         String
  user           User            @relation(fields: [userid], references: [id])
  keyExchanges   KeyExchange[]
  authentication Authentication?

  userid String
  @@map("devices")
}

model KeyExchange {
  id        String   @id @default(cuid()) @map("_id")
  content   String
  device    Device   @relation(fields: [deviceid], references: [id])
  vault     Vault    @relation(fields: [vaultid], references: [id])
  createdAt DateTime @default(now())

  deviceid String
  vaultid  String
  @@map("key_exchanges")
}

model Keycard {
  id    String   @id @default(cuid()) @map("_id")
  user  User     @relation(fields: [userid], references: [id])
  vault Vault    @relation(fields: [vaultid], references: [id])
  role  RoleType

  userid  String
  vaultid String

  @@unique([userid, vaultid])
  @@map("keycards")
}

model Vault {
  id           String        @id @default(cuid()) @map("_id")
  name         String // encrypted
  items        Item[]
  keyExchanges KeyExchange[]
  keycards     Keycard[]

  @@map("vaults")
}

model Authentication {
  id         String  @id @default(cuid()) @map("_id")
  deviceName String
  secret     String
  rsa        String
  user       User?   @relation(fields: [userid], references: [id])
  device     Device? @relation(fields: [deviceid], references: [id])

  userid   String?
  deviceid String?
  @@map("authentication_process")
}

model Item {
  uuid  String @id @default(cuid()) @map("_id")
  data  Json // encrypted
  vault Vault  @relation(fields: [vaultid], references: [id])

  vaultid String
  @@map("accounts")
}

enum RoleType {
  OWNER
  WRITER
  READER
}
