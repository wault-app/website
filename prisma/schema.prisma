// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(cuid()) @map("_id")
  username String    @unique
  devices  Device[]
  keycards Keycard[]

  Authentication Authentication[]
  @@map("users")
}

model Device {
  id             String          @id @default(cuid()) @map("_id")
  name           String
  loggedInAt     DateTime        @default(now())
  refreshToken   String
  rsaKey         String
  user           User            @relation(fields: [userid], references: [id])
  keyExchanges   KeyExchange[]
  authentication Authentication?
  type           DeviceType

  userid String
  @@map("devices")
}

model KeyExchange {
  id        String   @id @default(cuid()) @map("_id")
  content   String
  device    Device   @relation(fields: [deviceid], references: [id])
  safe      Safe     @relation(fields: [safeid], references: [id])
  createdAt DateTime @default(now())

  deviceid String
  safeid   String
  @@map("key_exchanges")
}

model Keycard {
  id   String   @id @default(cuid()) @map("_id")
  user User     @relation(fields: [userid], references: [id])
  safe Safe     @relation(fields: [safeid], references: [id])
  role RoleType

  userid String
  safeid String

  @@unique([userid, safeid])
  @@map("keycards")
}

model Safe {
  id           String        @id @default(cuid()) @map("_id")
  name         String // encrypted
  items        Item[]
  keyExchanges KeyExchange[]
  keycards     Keycard[]

  @@map("safes")
}

model Authentication {
  id         String  @id @default(cuid()) @map("_id")
  deviceName String
  secret     String
  rsa        String
  user       User?   @relation(fields: [userid], references: [id])
  device     Device? @relation(fields: [deviceid], references: [id])
  type       DeviceType

  userid   String?
  deviceid String?
  @@map("authentication_process")
}

model Item {
  id   String @id @default(cuid()) @map("_id")
  data Json   // encrypted
  safe Safe   @relation(fields: [safeid], references: [id])

  safeid String
  @@map("accounts")
}

enum RoleType {
  OWNER
  WRITER
  READER
}

enum DeviceType {
  MOBILE
  DESKTOP
  BROWSER
}